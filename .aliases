#!/bin/bash

# Quality of life
alias ls="ls -haFG --color"
alias cat="bat"
alias activate="source venv/bin/activate"

# Easier navigation: .., ..., ...., .....
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# Git shortcuts
alias g="git"
alias gs="git status"
alias ga="git add ."
alias gd="git diff"
alias gc="git commit -m"
alias gb="git branch"
alias gk="git checkout"
alias gl="git log --oneline"
alias ghr="git reset --hard HEAD"
alias gsh="git push"
alias gll="git pull"

# Open applications
alias chrome="open -a 'google chrome'"
alias safari="open -a 'safari'"
alias sublime="open -a 'sublime text'"
alias vscode="code"

# Code running
alias python="python3"

# Run ishan.coffee
alias thoughts="cd ~/Documents/code/projects/websites/ishan.coffee; hugo-obsidian -input=content -output=assets/indices -index -root=.; open http://localhost:1313; hugo server --disableFastRender;"
